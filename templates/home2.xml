<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
			<meta property="og:url" content="http://pillow.expert" />
			<meta property="og:title" content="Sleepow - The first music therapy pillow" /> 
			<meta property="og:description" content="Worldâ€™s first memory foam pillow featuring a fully-integrated stereo sound machine pre-loaded with Binaural Beats relaxation music Leverages the power of music to promote relaxation and sleep" /> 
			<meta property="og:image" content="http://pillow.expert/site/images/facebookog.png" />
			<meta property="og:type" content="website" />
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="sprites.svg"/>
			<header>
				<cms:mobile>
					<div class="wrap white">
						<img
							src="_BASEURL.'/site/images/logo.svg'"
							alt="site_title"
							cms:eval="src"
							/>

					<a
							 href="https://www.facebook.com/Sleepow"
							 class="upper"
						>
							<svg class="icon icon-facebook" viewBox="0 0 86 100"><use xlink:href="#icon-facebook"></use></svg>
						</a>
					</div>
				</cms:mobile>
				<div class="wrap clouds">
					<cms:desktop>
						<img
							src="_BASEURL.'/site/images/logo.svg'"
							alt="site_title"
							class="logo"
							cms:eval="src"
						/>

						<a
							 href="https://www.facebook.com/Sleepow"
							 class="upper"
						>
							<svg class="icon icon-facebook" viewBox="0 0 86 100"><use xlink:href="#icon-facebook"></use></svg>
						</a>
					</cms:desktop>
					<h1><cms:text constant="question" /></h1>
					<h1><cms:text constant="give_yourself"/></h1>
					<div class="img_girl">
						<img
							src="_BASEURL.'/site/images/girl-clouds.png'"
							alt="img_girl"
							class="girl"
							cms:eval="src"
						/>
						<a
							 href="javascript: void(0);"
							 id="button_girl"
						>
						<cms:text constant="learn_how"/>
					</a>
					</div>
					<div class="pricing hidden">
						<cms:desktop>
							<img
								src="_BASEURL.'/site/images/ticket.svg'" 
								alt="ticket"
								class="ticket"
								cms:eval="src"
								/>
							<img 
								src="_BASEURL.'/site/images/box_doctor.png'" 
								alt="ticket box"
								class="doctorbox"
								cms:eval="src"
								/>
						</cms:desktop>
						<div class="pricing_text">
							<span>
								<cms:text constant="original_price"/>
							</span>
							<span>
								<cms:text constant="now_only"/>
							</span>
							<span>
								<cms:text constant="99$"/>
							</span>
						</div>
					</div>
					<div class="call_to_action hidden">
						<a
							href="http://www.sleepmusicpillow.com/cart/618180873:1"
							class="for_myself"
							>
							<cms:text constant="for_myself"/>
							<svg class="icon icon-star" viewBox="0 0 105 100"><use xlink:href="#icon-star"></use></svg>
						</a>
						<a
							href="http://www.sleepmusicpillow.com/cart/618180873:1"
							class="for_myself"
							>
							<cms:text constant="as_a_gift"/>
							<svg class="icon icon-gift" viewBox="0 0 89 100"><use xlink:href="#icon-gift"></use></svg>
						</a>
					</div>
					<div class="benefits_conteiner">
						<div>
							<svg class="icon icon-sleep-faster" viewBox="0 0 87 100"><use xlink:href="#icon-sleep-faster"></use></svg>
							<cms:text constant="sleep_faster"/>
						</div>
						<div>
							<svg class="icon icon-sleep-deeper" viewBox="0 0 109 100"><use xlink:href="#icon-sleep-deeper"></use></svg>
							<cms:text constant="sleep_deeper"/>
						</div>
						<div>
							<svg class="icon icon-sleep-longer" viewBox="0 0 106 100"><use xlink:href="#icon-sleep-longer"></use></svg>
							<cms:text constant="sleep_longer"/>
						</div>
					</div>
					<h1><cms:text constant="world"/></h1>
					<cms:module
						name="articles"
						action="show"
						text_id="header_article"
					/>
				</div>
			</header>
				<div class="wrap stars">
					<span>
						<svg class="icon icon-sleep-genius" viewBox="0 0 99 100"><use xlink:href="#icon-sleep-genius"></use></svg>
						<cms:text constant="sleep_genius"/>
					</span>
					<h1><cms:text constant="sleep_genius_description"/></h1>
					<cms:desktop>
						<div id="video_player"/>
							<cms:module
								name="youtube"
								action="show"
								text_id="homepage_video"
								embed="1"
								width="800"
								height="400"
								target="video_player"
								theme="light"
								autohide="1"
								/>
					</cms:desktop>
					<cms:mobile>
						<a
							 href="'tel:'.urlencode(MainLanguageHandler::getInstance()->getText(''))"
							 eval="href" 
							 class=""
						>
							<img
								src="_BASEURL.'/site/images/youtube.png'"
								alt="youtube"
								cms:eval="src"
							/>
					</a>
					</cms:mobile>
				</div>
				<div class="wrap black">
					<span><cms:text constant="sleep_better"/></span>
					<h1><cms:text constant="music_engages"/></h1>
					<div class="features_container">
						<div class="inner_wrap">
							<cms:module
								name="articles"
								action="show_list"
								group="features"
								template="parts/feature.xml"
								/>
						</div>
					</div>
				</div>
				<div class="wrap bg_woman">
					<cms:module
						name="articles"
						action="show"
						text_id="wrap_white_article"
						template="parts/article.xml"
					/>
					<div class="unique_container">
						<h2><cms:text constant="unique_1"/></h2>
						<h2><cms:text constant="unique_2"/></h2>
						<h2><cms:text constant="unique_3"/></h2>
					</div>
				</div>
				<div class="wrap bg_coffe">
					<div class="inner_wrap">
						<img
							src="_BASEURL.'/site/images/text-title-new.svg'"
							alt="text-title"
							cms:eval="src"
						/>
					</div>
				</div>
				<div class="wrap specs_bg">
					<div class="inner_wrap">
						<cms:module
							name="articles"
							action="show"
							text_id="article_specs_bg"
						/>
					</div>
				</div>
				<div class="wrap white doctor">
					<cms:module
						name="articles"
						action="show"
						text_id="article_doctor"
					/>
					<div class="container_links">
						<h1><cms:text constant="get_sleepow"/></h1>
						<div class="call_to_action">
							<a
								href="http://www.sleepmusicpillow.com/cart/618180873:1"
								class="for_myself"
								>
								<cms:text constant="for_myself"/>
								<svg class="icon icon-star" viewBox="0 0 105 100"><use xlink:href="#icon-star"></use></svg>
							</a>
							<a
								href="http://www.sleepmusicpillow.com/cart/618180873:1"
								class="for_myself"
								>
								<cms:text constant="as_a_gift"/>
								<svg class="icon icon-gift" viewBox="0 0 89 100"><use xlink:href="#icon-gift"></use></svg>
							</a>
						</div>
					</div>
				</div>
				<footer>
					<h1><cms:text constant="give_yourself"/></h1>
				</footer>
				<cms:raw file="parts/remarketing.txt"/>
				<cms:raw file="parts/luckyorange.txt"/>
		</body>
	</html>
</document>
